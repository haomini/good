<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="TSTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeColor</item>
        <item name="colorPrimaryDark">@color/themeColor</item>
        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bgColor</item>
        <item name="alertDialogTheme">@style/TSAlertDialogStyle</item>
        <item name="toolbarStyle" tools:ignore="NewApi">@style/TSToolBar</item>
    </style>

    <style name="TSToolBar" parent="Widget.AppCompat.Toolbar">
        <!--左边边距-->
        <item name="contentInsetStart">0dp</item>
    </style>

    <!--修改系统dialog样式-->
    <style name="TSAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/themeColor</item>
        <!-- Used for the title and text -->
        <!--<item name="android:textColorPrimary">#FFFFFF</item>-->
        <!-- Used for the background -->
        <!--<item name="android:background">#4CAF50</item>-->
    </style>

    <style name="loading_button_style">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/selector_loading_button</item>
    </style>

    <!--######################## 编辑框 ############################-->
    <!-- 输入框外层背景 -->
    <style name="style_edit_white_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_line_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 登录注册文字-->
    <style name="style_small_text">
        <item name="android:layout_width">@dimen/edit_lefttext_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_mid</item>
        <item name="android:textColor">@color/important_for_content</item>
    </style>

    <!-- 输入框游标 -->
    <style name="style_edit_cursor">
        <item name="android:textColorHint">@color/general_for_hint</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor_drawable</item>
    </style>

    <!-- 登录注册输入框-->
    <style name="style_edit" parent="style_edit_cursor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/size_content</item>
        <item name="android:textColor">@color/important_for_content</item>
        <item name="android:paddingRight">@dimen/spacing_mid</item>
    </style>

    <!-- 分隔线水平 浅色-->
    <style name="style_divider_horizontal_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_line</item>
        <item name="android:background">@color/general_for_line_light</item>
    </style>
</resources>
