<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--头像，用户名，简介-->
    <RelativeLayout
        android:id="@+id/rl_userinfo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/white"
        >
        <!--头像-->
        <ImageView
            android:id="@+id/iv_head_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="@dimen/spacing_mid_small_8dp"
            android:src="@mipmap/ico_me"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal_large"
            android:layout_toRightOf="@id/iv_head_icon"
            android:orientation="vertical">
            <!--用户名-->
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="奔跑的蜗牛"
                android:textColor="@color/important_for_content"
                android:textSize="@dimen/size_sub_title"/>
            <!--用户签名-->
            <TextView
                android:id="@+id/tv_user_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:maxLines="2"
                android:text="天青色等烟雨，而我在等你，炊烟袅袅升起，晕开了结局"
                android:textColor="@color/normal_for_assist_text"
                android:textSize="@dimen/size_content_assist"/>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            style="@style/style_divider_horizontal_light"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"/>
    </FrameLayout>

    <!--意见反馈-->
    <com.example.zhiyicx.justdodagger2.widget.button.CombinationButton
        android:id="@+id/bt_suggestion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/full_button_height"
        android:layout_marginTop="@dimen/spacing_mid"
        app:dividerLeftMargin="@dimen/spacing_normal"
        app:dividerRightMargin="@dimen/spacing_normal"
        app:leftImage="@mipmap/ico_read"
        app:leftText="反馈给我吧，反正我也收不到"
        app:rightImage="@mipmap/ic_arrow_smallgrey"/>

    <!--设置-->
    <com.example.zhiyicx.justdodagger2.widget.button.CombinationButton
        android:id="@+id/bt_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/full_button_height"
        app:leftImage="@mipmap/ico_setting"
        app:leftText="设置，你想作甚么呢"
        app:rightImage="@mipmap/ic_arrow_smallgrey"
        app:showLine="false"/>
</LinearLayout>
