<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_navigationbar_height"
        android:layout_alignParentBottom="true"
        android:background="@color/themeColor"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="@dimen/icon_for_home_bottom"
                android:layout_height="@dimen/icon_for_home_bottom"
                android:src="@mipmap/ico_video"/>

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_for_home_bottom_text_margin"
                android:text="视频"
                android:textColor="@color/home_bottom_navigate_text_normal"
                android:textSize="@dimen/size_note_assist"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_find"
                android:layout_width="@dimen/icon_for_home_bottom"
                android:layout_height="@dimen/icon_for_home_bottom"
                android:src="@mipmap/ico_music"/>

            <TextView
                android:id="@+id/tv_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_for_home_bottom_text_margin"
                android:text="发现"
                android:textColor="@color/home_bottom_navigate_text_normal"
                android:textSize="@dimen/size_note_assist"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_for_home_bottom">

                <ImageView
                    android:id="@+id/iv_message"
                    android:layout_width="@dimen/icon_for_home_bottom"
                    android:layout_height="@dimen/icon_for_home_bottom"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ico_read"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_for_home_bottom_text_margin"
                android:text="阅读"
                android:textColor="@color/home_bottom_navigate_text_normal"
                android:textSize="@dimen/size_note_assist"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_for_home_bottom">

                <ImageView
                    android:id="@+id/iv_mine"
                    android:layout_width="@dimen/icon_for_home_bottom"
                    android:layout_height="@dimen/icon_for_home_bottom"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ico_me"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_for_home_bottom_text_margin"
                android:text="我的"
                android:textColor="@color/home_bottom_navigate_text_normal"
                android:textSize="@dimen/size_note_assist"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom_container"/>
</RelativeLayout>
